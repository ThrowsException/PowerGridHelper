extends layout

block content
  h1= title
  p Welcome to #{title}

  #app
    #coal
      h2#coal_label Coal
    #oil
      h2#oil_label Oil
    #trash
      h2#trash_label Trash
    #uranium
      h2#uranium_label Uranium
    
    h2#total $0
    h2#step 1

    label(for='number_of_players')
      input(id='number_of_players' value=2)

    button(id='step1' value=1) Step 1

    button(id='step2' value=2) Step 2

    button(id='step3' value=3) Step 3

    button(id='replenish') Replenish

    button(id='buy') Buy
  script(src="/javascripts/main.js")